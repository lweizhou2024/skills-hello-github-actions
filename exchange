import ast

def safe_load_like_yaml(filehandler):
    lines = [line.strip() for line in filehandler if line.strip()]

    title = lines[0]
    result = {}

    for line in lines[1:]:
        key, body = line.split(":", 1)
        result[key.strip()] = ast.literal_eval(body.strip())

    # mimic yaml.safe_load(...)[titlestring]
    return {title: result}
