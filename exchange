dcm = datacursormode(gcf);
set(dcm,'Enable','on');
set(dcm,'UpdateFcn',@(src,evt) myDataTipFcn(src,evt,Vs,TR));
function txt = myDataTipFcn(~, event_obj, Vs, TR)

    pos = event_obj.Position;   % [x y z]

    % Find nearest vertex
    idx = nearestNeighbor(TR, pos);

    value = Vs(idx);

    txt = {
        ['X: ', num2str(pos(1))]
        ['Y: ', num2str(pos(2))]
        ['Z: ', num2str(pos(3))]
        ['Value: ', num2str(value)]
    };
end
